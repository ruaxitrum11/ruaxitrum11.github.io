<script>

  function postProductAdd() {

    var productName = $("input[name=productName]").val();
    // var thumb = $("input[name=thumb]").val();
    var color = $("input[name=color]:checked").val();
    var price = $("input[name=price]").val();
    var quantity = $("input[name=quantity]").val();
    var brand = $("input[name=brand]:checked").val();
    var description = $("textarea[name=description]").val();

 

    $.ajax({
      url: '/admin/product/addProduct',
      type: 'post',
      data: {
        productName : productName.trim(),
        // thumb : thumb,
        color : color,
        price : price,
        quantity : quantity ,
        brand : brand ,
        description : description
      },
      dataType: 'json',
    }).done(function(results){
      console.log(results);
      if (results.status == true) {
        $.confirm({
          title: 'Thông Báo!',
          content: 'Tạo sản phẩm thành công',
          buttons: {
            Ok: function () {
              // $.alert('Ok');
              window.location.replace("/admin/product/list");
            },
          }
        });
      }else{
        $.alert({
          title: 'Thông Báo !',
          content: '<span class="text-danger"><strong class="fa fa-close"></strong>'+results.errors[0].msg+'</span>'
        })

      }

    })

  }



</script>